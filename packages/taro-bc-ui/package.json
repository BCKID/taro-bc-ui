{
  "name": "taro-bc-ui",
  "version": "3.0.0-alpha.2",
  "description": "UI KIT for Taro",
  "module": "dist/index.esm.js",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "sideEffects": [
    "*.scss",
    "*.css"
  ],
  "types": "./types/index.d.ts",
  "keywords": [
    "taro",
    "taro-ui",
    "taro-bc-ui",
    "ui"
  ],
  "files": [
    "lib",
    "dist",
    "types"
  ],
  "author": "bckid",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "publishConfig": {
    "tag": "3.0"
  },
  "scripts": {
    "dev": "yarn run dev:lib",
    "dev:lib": "tsc --project ./tsconfig.build.json --watch --incremental",
    "build": "yarn run build:rollup && yarn run build:lib",
    "build:lib": "tsc --project ./tsconfig.build.json",
    "build:rollup": "rollup --config ./config/rollup.config.js",
    "prepublishOnly": "yarn run clean && yarn run build",
    "lint": "eslint ./src --fix",
    "lint:style": "stylelint \"src/**/*.scss\" --syntax scss",
    "lint:style-fix": "stylelint \"src/**/*.scss\" --syntax scss --fix",
    "test": "cross-env NODE_ENV=test && jest --coverage",
    "test:ci": "yarn run build:h5 && yarn run test",
    "test:analyze": "rollup --config ./config/rollup.config.analyze.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean": "rimraf .temp dist lib coverage"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@tarojs/components": "*",
    "@tarojs/react": "*",
    "@tarojs/taro": "^3.0.26",
    "@types/classnames": "^2.2.11",
    "@types/node": "^14.14.24",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "react": "*",
    "react-dom": "*",
    "rollup": "^2.38.4",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-visualizer": "^4.2.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@tarojs/components": "^3.0.26",
    "@tarojs/react": "^3.0.26",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dayjs": "^1.10.4",
    "lodash": "^4.17.20",
    "prop-types": "^15.7.2"
  }
}
